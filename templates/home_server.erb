home_server <%= @name %> {
	type = <%= @type %>
<% if @ipaddr != '' -%>
	ipaddr = <%= @ipaddr %>
<% end -%>
<% if @ipv6addr != '' -%>
	ipv6addr = <%= @ipv6addr %>
<% end -%>
<% if @virtual_server != '' -%>
	virtual_server = <%= @virtual_server %>
<% end -%>
	port = <%= @port %>
	proto = <%= @proto %>
	secret = <%= @secret %>
<%- if @status_check -%>
  status_check = <%= @status_check %>
<%- end -%>
}

